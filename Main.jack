

cclass Main {
    function void main() {
        var Screen screen;
        var Input input;
        var ResultManager resultManager;

        let screen = Screen.new();
        let input = Input.new();
        let resultManager = ResultManager.new();

        while (not input.shouldExit()) {
            input.check(resultManager);
            var int result = resultManager.getResult();
            screen.displayResult(result);
        }
    }
}
